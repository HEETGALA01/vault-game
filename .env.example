# ========================================
# VAULT BREAKER - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in your values

# OpenAI API Key (optional - for AI predictions)
OPENAI_API_KEY=your_openai_api_key_here

# Resend Email Configuration (for sending score emails)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxx

# From email address (must be verified in Resend, or use onboarding@resend.dev for testing)
RESEND_FROM_EMAIL=onboarding@resend.dev

# Display name for emails
EMAIL_FROM_NAME=Vault Breaker

# Admin Password (change this!)
ADMIN_PASSWORD=admin123

# Server Port (Render will set this automatically)
PORT=3000
